@import url('https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600;700;800&display=swap');

/* ====== Paleta igual à tela de cadastro ====== */
:root {
  --bg-0:#003543;   /* Azul-petróleo base */
  --bg-1:#004d40;   /* Azul esverdeado escuro */
  --ink:#ffffff;
  --muted:#aeb6bf;
  --brand:#00bfa6;   /* Turquesa */
  --brand-2:#f4c20d; /* Amarelo */
  --radius-xl:22px;
  --radius:14px;
}

/* ====== Reset ====== */
* { box-sizing:border-box; margin:0; padding:0; }
html,body { height:100%; }

/* ====== Fundo da página ====== */
body.login-page {
  font-family:'Work Sans',system-ui,Segoe UI,Roboto,Ubuntu,Arial,sans-serif;
  color:var(--ink) !important;
  background:
    radial-gradient(1200px 600px at 10% 10%, rgba(0,191,166,.08), transparent 60%),
    radial-gradient(900px 500px at 90% 80%, rgba(244,194,13,.08), transparent 60%),
    linear-gradient(145deg, var(--bg-0), var(--bg-1));
  background-attachment:fixed;
  background-repeat:no-repeat;
  background-size:cover;
}

/* ====== Shell central ====== */
.login-shell {
  display:flex;
  justify-content:center;
  align-items:flex-start;
  min-height:100vh;
  padding:6vh 1rem 4vh;
  overflow:hidden;
}

/* ====== Card ====== */
.login-card {
  width:min(460px,90vw);
  background:rgba(255,255,255,.05);
  border:1px solid rgba(255,255,255,.08);
  backdrop-filter:blur(10px);
  border-radius:var(--radius-xl);
  padding:clamp(22px,3vw,36px);
  box-shadow:0 8px 30px rgba(0,0,0,.4);
  display:grid;
  grid-template-columns:1fr;
  gap:18px;
  text-align:center;
  color:var(--ink);
}

/* ====== Logo ====== */
.brand {
  display:inline-flex;
  align-items:center;
  gap:12px;
  margin:0 auto 6px;
  text-decoration:none;
  color:var(--ink);
}
.brand img {
  width:80px; height:80px; object-fit:contain;
  transition:transform .3s ease;
}
.brand img:hover {
  transform:scale(1.05);
  filter:drop-shadow(0 6px 12px rgba(0,191,166,0.4));
}

/* ====== Títulos ====== */
.login-title {
  margin:4px 0 0;
  font-size:clamp(22px,2.6vw,28px);
  font-weight:800;
  color:var(--ink);
}
.login-subtitle {
  margin:0 0 8px;
  color:var(--muted);
  font-weight:600;
}

/* ====== Form ====== */
form { margin-top:4px; }

.form-group {
  text-align:left;
  margin-bottom:14px;
}
label {
  display:block;
  font-weight:700;
  font-size:14px;
  margin-bottom:8px;
  color:var(--ink);
}

input[type="email"],
input[type="password"],
input[type="text"],
input[type="tel"] {
  width:100%;
  background:rgba(0,0,0,.35);
  color:var(--ink);
  border:1px solid rgba(255,255,255,.18);
  border-radius:var(--radius);
  padding:12px 14px;
  font-size:15px;
  outline:none;
  transition:border-color .15s ease,background-color .15s ease,box-shadow .15s ease;
}
input::placeholder { color:#d2d9df; opacity:.8; }
input:focus {
  border-color:var(--brand);
  box-shadow:0 0 0 3px rgba(0,191,166,.25);
  background:rgba(0,0,0,.28);
}

/* ====== Senha ====== */
.password-wrap { position:relative; }
.toggle-pass {
  position:absolute;
  top:50%; right:10px;
  transform:translateY(-50%);
  border:0;
  background:transparent;
  color:#e6e6e6;
  font-size:16px;
  padding:6px 8px;
  border-radius:10px;
  cursor:pointer;
}
.toggle-pass:hover { background:rgba(255,255,255,.08); }

.field-hint {
  display:block;
  margin-top:6px;
  color:var(--muted);
  font-size:12px;
}

/* ====== Lembrar + Esqueci ====== */
.form-row {
  margin:12px 0 6px;
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:14px;
}
.check {
  display:inline-flex; align-items:center; gap:10px;
  font-weight:600; color:#e8edf2;
  user-select:none;
}
.check input { width:18px; height:18px; accent-color:var(--brand-2); }
.link {
  color:var(--brand-2);
  text-decoration:none;
  font-weight:700;
}
.link:hover { text-decoration:underline; }

/* ====== Botão principal ====== */
.btn-primary {
  width:100%;
  border:0;
  border-radius:18px;
  padding:12px 18px;
  font-weight:800;
  text-transform:uppercase;
  letter-spacing:.4px;
  background:linear-gradient(135deg, var(--brand-2), #ffd95a);
  color:#121212;
  cursor:pointer;
  transition:transform .06s ease,filter .2s ease,box-shadow .15s ease;
  box-shadow:0 6px 18px rgba(244,194,13,.25);
}
.btn-primary:hover {
  transform:translateY(-1px);
  filter:brightness(1.05);
}
.btn-primary:active { transform:translateY(0); }

/* ====== Divider ====== */
.divider {
  position:relative; margin:18px 0;
  text-align:center; color:var(--muted); font-weight:700;
}
.divider::before, .divider::after {
  content:""; position:absolute; top:50%; width:42%; height:1px;
  background:rgba(255,255,255,.12);
}
.divider::before { left:0; }
.divider::after { right:0; }
.divider span { padding:0 8px; }

/* ====== Botões Sociais ====== */
.socials {
  display:grid; grid-template-columns:1fr; gap:12px; margin-top:2px;
}
.btn-social {
  width:100%;
  display:flex; align-items:center; justify-content:center; gap:10px;
  border:1px solid rgba(255,255,255,.16);
  background:rgba(255,255,255,.05);
  color:#f2f4f7;
  border-radius:14px;
  padding:10px 14px;
  font-weight:700;
  cursor:pointer;
  transition:background-color .15s ease, transform .06s ease;
}
.btn-social:hover {
  background:rgba(255,255,255,.08);
  transform:translateY(-1px);
}
.btn-social img { width:18px; height:18px; }

/* ====== Rodapé ====== */
.signup-hint {
  margin:14px 0 0;
  color:var(--muted);
  font-weight:600;
  text-align:center;
}

/* ====== Responsividade ====== */
@media (min-width:780px) {
  .login-card { max-width:560px; }
}
@media (max-width:420px) {
  .brand img { width:42px; height:42px; }
  .form-row { flex-direction:column; align-items:flex-start; gap:10px; }
}

/* ====== Proteção contra conflitos globais ====== */
body.login-page, body.login-page * {
  color:var(--ink) !important;
}
body.login-page label,
body.login-page small,
body.login-page .field-hint,
body.login-page .signup-hint {
  color:var(--muted) !important;
}
body.login-page .link,
body.login-page a {
  color:var(--brand-2) !important;
  font-weight:700;
}
body.login-page input::placeholder {
  color:#d2d9df !important;
}
